{
  "name": "AI Email Assistant",
  "description": "Professional AI-powered email reply generator for Gmail.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://3.90.38.82:8080/*",
    "*://mail.google.com/*"
  ],
  "action": {
    "default_title": "AI Email Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/mail.png",
      "32": "icons/mail.png",
      "48": "icons/mail.png",
      "128": "icons/mail.png"
    }
  },
  "icons": {
    "16": "icons/mail.png",
    "32": "icons/mail.png",
    "48": "icons/mail.png",
    "128": "icons/mail.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["styles.css"]
    }
  ]
}